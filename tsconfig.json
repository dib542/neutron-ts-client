{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "target": "es5",
      "lib": ["ES2015", "ES2016", "ES2016.Array.Include", "ScriptHost", "DOM", "DOM.Iterable"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "noImplicitThis": true,
      "noUnusedLocals": false,
      "sourceMap": true,
      "declaration": true,
      "outDir": "./dist",
      "skipLibCheck": true,
      "types": ["node", "events"]
    },
    "include": ["./src"],
    "exclude": ["./dist"]
  }